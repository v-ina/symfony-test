                <li><a href="{{ path('home') }}">home</a></li>
                <li><a href="{{ path('pokemon_category_list') }}">category</a></li>
                <li><a href="/articles">articles</a></li>
                <li><a href="{{ path('poker') }}">Poker</a></li>
            </ul>
        </nav>
    </header>

    <h1>TEST FOR BASE.HTML</h1>
        {% block body %}
        {% endblock %}

    <footer>
        <h2>FOOTERFOOTERFOOTERFOOTERFOOTER</h2>
    </footer>

</body>
</html>

